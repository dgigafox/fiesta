<div class="flex justify-center flex-wrap my-5">
  <div class="flex flex-col items-center p-8 bg-white shadow-lg rounded mx-8 mb-8 flex-1 mb-8 md:mb-0  md:w-1/3 sm:flex-initial">
    <p>Welcome to Katoto!</p>
    <%= form_for @changeset, "#", [class: "m-4 px-5 flex flex-col w-100", phx_change: :validate, phx_submit: :save], fn f -> %>
      <%= text_input f, :name, class: "border-2 mb-3 py-3 px-3 rounded-lg bg-white-100 outline-none focus:bg-gray-200 w-100", placeholder: "Enter lobby name" %>
      <%= submit "Create Lobby", class: "btn btn-blue" %>
    <% end %>
  </div>
</div>